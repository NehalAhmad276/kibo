<div class="container py-4 py-md-5">
  <h2 class="fw-bold mb-4 text-center text-md-start">Your Cart</h2>

  <% if (cart.length === 0) { %>
    <p>Your cart is empty.</p>
    <a href="/products" class="btn btn-outline-dark mt-3">
      Continue Shopping
    </a>
  <% } else { %>

    <div class="row g-4">

      <!-- CART ITEMS -->
      <div class="col-12 col-lg-8">

        <% cart.forEach(item => { %>
          <div class="card mb-3 border-0 shadow-sm p-2 p-md-3">
            <div class="row g-2 align-items-center">

              <!-- IMAGE -->
              <div class="col-4 col-md-3">
                <img
                  src="<%= item.product.images[0] %>"
                  class="img-fluid rounded cart-img"
                  alt="<%= item.product.name %>"
                />
              </div>

              <!-- DETAILS -->
              <div class="col-8 col-md-5">
                <h6 class="fw-bold mb-1"><%= item.product.name %></h6>
                <p class="text-muted mb-1">
                  ₹<%= item.product.price %>
                </p>

                <!-- REMOVE (MOBILE) -->
                <form
                  action="/cart/remove/<%= item.product._id %>"
                  method="POST"
                  class="d-md-none"
                >
                  <button class="btn btn-sm btn-link text-danger p-0">
                    Remove
                  </button>
                </form>
              </div>

              <!-- QUANTITY -->
              <div class="col-6 col-md-2">
                <form action="/cart/update" method="POST">
                  <input
                    type="hidden"
                    name="productId"
                    value="<%= item.product._id %>"
                  />
                  <input
                    type="number"
                    name="quantity"
                    value="<%= item.quantity %>"
                    min="1"
                    class="form-control form-control-sm"
                  />
                  <button class="btn btn-sm btn-outline-dark mt-2 w-100">
                    Update
                  </button>
                </form>
              </div>

              <!-- REMOVE (DESKTOP) -->
              <div class="col-md-2 d-none d-md-block text-center">
                <form action="/cart/remove/<%= item.product._id %>" method="POST">
                  <button class="btn btn-sm btn-link text-danger">
                    Remove
                  </button>
                </form>
              </div>

            </div>
          </div>
        <% }) %>

      </div>

      <!-- SUMMARY -->
      <div class="col-12 col-lg-4">
        <div class="card border-0 shadow-sm p-3 p-md-4 cart-summary">
          <h5 class="fw-bold mb-3">Summary</h5>

          <p class="d-flex justify-content-between mb-2">
            <span>Total</span>
            <span class="fw-semibold">₹<%= total %></span>
          </p>

          <a href="/checkout" class="btn btn-dark w-100 mt-3 py-2">
            Proceed to Checkout
          </a>
        </div>
      </div>

    </div>

  <% } %>
</div>
