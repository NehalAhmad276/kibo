<div class="card text-bg-dark border-0 rounded-0">
  <img
    src="/image/homePagePoster.jpeg"
    class="card-img hero-main-img"
    alt="Hero"
  />
  <div class="card-img-overlay hero d-flex align-items-center justify-content-center">
    <a href="/products" class="btn hero-btn">Shop Now</a>
  </div>
</div>

<!-- PERFUME SECTION -->
<section class="homepage-product-section container py-4 py-md-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Perfumes</h3>
    <a class="btn btn-link noLinkDecoretion" href="/products">View All</a>
  </div>

  <div class="row g-3 g-md-4">
    <% products.slice(0, 6).forEach(product => { %>
      <div class="col-6 col-md-4 col-lg-3">
        <div class="card border-0 shadow-sm product-card h-100">
          <a href="/products/<%= product._id %>" class="text-decoration-none text-dark">
            <img
              src="<%= product.images[0] %>"
              class="card-img-top product-img"
              alt="<%= product.name %>"
            />
            <div class="card-body text-center">
              <h6 class="fw-bold mb-1"><%= product.name %></h6>
              <p class="mb-0 fw-semibold">₹ <%= product.price %></p>
            </div>
          </a>
        </div>
      </div>
    <% }) %>
  </div>
</section>

